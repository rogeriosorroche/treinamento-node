<% include ../partials/header.ejs %>

<main class="container">
  <h1 class="title">Cadastro</h1>

  <% if (locals.validationErros) { %>
     <ul>
       <% for (let e of validationErros) { %>
        <li><%=e.msg%></li>
       <% } %>
     </ul>
  <% } %>

  <form class="form" action="/usuario" method="POST">
    <input type="hidden" name="id" value="<%= usuario.id %>">

    <label class="form-label" for="nome">Nome:</label>
    <input class="form-input" type="text" name="nome" id="nome" autofocus value="<%= usuario.nome %>">

    <label class="form-label" for="email">Email:</label>
    <input class="form-input" type="text" name="email" id="email" value="<%= usuario.email || "" %>">

    <label class="form-label" for="senha">Senha</label>
    <input class="form-input" type="password" name="senha" id="senha" value="<%= usuario.senha || "" %>">

    <input class="button" type="submit" value="Cadastro">
  </form>
</main>

<% include ../partials/footer.ejs %>
